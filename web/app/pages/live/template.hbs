<document>
  <stackTemplate>
    <collectionList>
      <grid>
        <section>
        {{#each allover }}
          <lockup data-href-page="play" data-href-page-options="{{toJSON this }}">
            {{#if image}}
            <img src="{{ image }}" class="darkImage station" />
            {{else}}
            <img src="" class="darkImage station" />
            {{/if}}
            <title>{{ stationName }}</title>
            <description class="current-show" style="font-size:27%; margin-top:10; text-align: center">{{ showTitle }}</description>
            <overlay>
              <progressBar value="{{ progress }}" style="tv-tint-color2x: black; margin: 0"/>
            </overlay>
          </lockup>
        {{/each}}
        </section>
      </grid>
      <grid>
          <header>
            <title>Regionální stanice</title>
          </header>
          <section>
            {{#each regional }}
            <lockup data-href-page="play" data-href-page-options="{{toJSON this }}">
              {{#if image}}
              <img class="station-regional" src="{{ image }}"/>
              {{else}}
              <img class="station-regional" src=""/>
              {{/if}}
              <title>{{ stationName }}</title>
              <description class="current-show" style="font-size:27%; margin-top:10; text-align: center">{{ showTitle }}</description>
              <overlay>
                <progressBar value="{{ progress }}" style="tv-tint-color2x: black; margin: 0"/>
              </overlay>
            </lockup>
            {{/each}}
          </section>
      </grid>
      <shelf>
          <header>
            <title>Zahraniční stanice</title>
          </header>
          <section>
            {{#each foreign }}
            <lockup data-href-page="play" data-href-page-options="{{toJSON this }}">
              {{#if image}}
              <img class="station-int" src="{{ image }}"/>
              {{else}}
              <img class="station-int" src=""/>
              {{/if}}
              <title>{{ stationName }}</title>
              <description class="current-show" style="font-size:27%; margin-top:10; text-align: center">{{ showTitle }}</description>
              <overlay>
                <progressBar value="{{ progress }}" style="tv-tint-color2x: black; margin: 0"/>
              </overlay>
            </lockup>
            {{/each}}
          </section>
      </shelf>
    </collectionList>
  </stackTemplate>
</document>
