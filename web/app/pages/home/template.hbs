<document>
  <stackTemplate>
    <collectionList>
      {{#if carousel}}
      <carousel>
        <section>
          {{#each carousel.items }}
          <lockup data-href-page="{{ entity.type }}" data-href-page-options="{{toJSON entity }}">
            {{#if image}}
            <img src="{{ image }}" class="darkImage episode-big" />
            {{else}}
            <img src="" class="darkImage episode-big" />
            {{/if}}
            <title>{{ title }}</title>
            <description class="current-show" style="font-size:27%; margin-top:10; text-align: center">{{ description }}</description>
          </lockup>
          {{/each}}
        </section>
      </carousel>
      {{/if}}
      {{#each sections}}
      <grid>
          <header>
            <title>{{ title }}</title>
          </header>
          <section>
            {{#each items }}
            <lockup data-href-page="{{ type }}" data-href-page-options="{{toJSON this}}">
              {{#if attributes.asset.url}}
              <img src="{{ attributes.asset.url }}" class="{{ type }}"/>
              {{else}}
              <img class="{{ type }}" src=""/>
              {{/if}}
              <overlay>
                <title class="image-title">{{ attributes.title }}</title>
              </overlay>
            </lockup>
            {{/each}}
          </section>
      </grid>
      {{/each}}
      {{#if dashboard}}
      <grid>
        <header>
          <title>Témata</title>
        </header>
          <section>
            {{#each dashboard }}
            <lockup data-href-page="topic" data-href-page-options="{{toJSON this }}">
              {{#if attributes.asset.url}}
              <img src="{{ attributes.asset.url }}" class="topic-small"/>
              {{else}}
              <img src="" class="topic-small"/>
              {{/if}}
              <overlay>
                <title class="image-title">{{ attributes.title }}</title>
              </overlay>
            </lockup>
            {{/each}}
            <lockup data-href-page="topics">
              <img src="" class="topic-small"/>
              <overlay>
                <title class="image-title">Další...</title>
              </overlay>
            </lockup>
          </section>
      </grid>
      {{/if}}
      <row style="tv-interitem-spacing: 40">
        <button id="read-btn" style="width: 520">
          <text>Hry, četby a povídky</text>
        </button>
        <button id="docs-btn" style="width: 520">
          <text>Dokumenty</text>
        </button>
        <button id="kids-btn" style="width: 520">
          <text>Pro děti</text>
        </button>
      </row>
    </collectionList>
  </stackTemplate>
</document>
