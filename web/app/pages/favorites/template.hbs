<document>
  {{#if favorites}}
  <stackTemplate>
    <banner>
      <title>Oblíbené</title>
    </banner>
    <collectionList>
      {{#if favorites.serials}}
      <grid>
        <header>
          <title>Seriály</title>
        </header>
        <section>
          {{#each favorites.serials}}
          <lockup data-href-page="{{ type }}" data-href-page-options="{{toJSON this }}">
            <img src="{{ attributes.asset.url }}" width="392" height="220"/>
            <title>{{ attributes.title }}</title>
          </lockup>
          {{/each}}
        </section>
      </grid>
      {{/if}}
      {{#if favorites.shows}}
      <grid>
        <header>
          <title>Pořady</title>
        </header>
        <section>
          {{#each favorites.shows}}
          <lockup data-href-page="{{ type }}" data-href-page-options="{{toJSON this }}">
            <img src="{{ attributes.asset.url }}" width="250" height="235"/>
            <title>{{ attributes.title }}</title>
          </lockup>
          {{/each}}
        </section>
      </grid>
      {{/if}}
      {{#if favorites.topics}}
      <grid>
        <header>
          <title>Témata</title>
        </header>
        <section>
          {{#each favorites.topics}}
          <lockup data-href-page="{{ type }}" data-href-page-options="{{toJSON this }}">
            <img src="{{ attributes.asset.url }}" width="210" height="210"/>
            <overlay>
              <title>{{ attributes.title }}</title>
            </overlay>
          </lockup>
          {{/each}}
        </section>
      </grid>
      {{/if}}
    </collectionList>
  </stackTemplate>
  {{else}}
  <alertTemplate>
    <description>Žádné oblíbené.</description>
  </alertTemplate>
  {{/if}}
</document>
