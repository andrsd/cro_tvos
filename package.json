  "description": "Neoficiální klient Českého rozhlasu pro Apple TV s použitím atvjs",
  "main": "index.js",
  "scripts": {
    "install-deps": "npx yarn@$npm_package_engines_yarn install --frozen-lockfile --check-files",
    "build": "webpack --progress",
    "serve": "webpack-dev-server",
    "dist": "NODE_ENV=production webpack --progress",
    "test": "./node_modules/.bin/mocha test --timeout 0 --exit",
    "coverage": "npx nyc --reporter=json npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrsd/cro_tvos.git"
  },
  "keywords": [
    "appletv",
    "tvml",
    "app",
    "tvjs",
    "atvjs",
    "appletv",
    "tvmlkit",
    "cesky rozhlas",
    "cro",
    "radio"
  ],
  "author": "David Andrš",
  "license": "",
  "bugs": {
    "url": "https://github.com/andrsd/cro_tvos/issues"
  },
  "homepage": "https://github.com/andrsd/cro_tvos#readme",
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "babel-loader": "^8.1.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "codecov": "^3.7.0",
    "copy-webpack-plugin": "^5.1.1",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "faker": "^4.1.0",
    "handlebars-loader": "^1.7.1",
    "mocha": "^7.2.0",
    "nyc": "^15.0.1",
    "raw-loader": "^3.1.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "atvjs": "^0.2.9",
    "fast-xml-parser": "^3.16.0",
    "handlebars": "^4.7.6",
    "string-strip-html": "^4.3.21"
  },
  "nyc": {
    "include": [
      "web/app/**/*.js"
    ],
    "sourceMap": false,
    "instrument": false
