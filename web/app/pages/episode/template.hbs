<document>
  <productTemplate>
    <banner style="height:685">
      <stack>
        <title>{{ episode.attributes.title }}{{#if episode.attributes.part}} ({{ episode.attributes.part}}. díl){{/if}}</title>
        <row>
          <text>{{longDate episode.attributes.since }}</text>
          <text>{{timeLength episode.attributes.since episode.attributes.till }}</text>
          <text>{{ episode.attributes.mirroredShow.title }}</text>
        </row>
        <description id="descr" allowsZooming="true" moreLabel="more">{{removeHTML episode.attributes.description }}</description>
        <row>
          <buttonLockup data-href-page="now-playing" data-href-page-options="{{toJSON episode }}">
            <badge src="resource://button-play"/>
            <title>Přehrát</title>
          </buttonLockup>
          <buttonLockup id="add-btn">
            <badge src="resource://button-add"/>
            <title>Do fronty</title>
          </buttonLockup>
          <buttonLockup id="fav-btn">{{{ ratedButton }}}</buttonLockup>
          {{#if show_button}}
          <buttonLockup id="to-show-btn">
            <badge src="resource://list-chevron"/>
            <title>Pořad</title>
          </buttonLockup>
          {{/if}}
        </row>
      </stack>
      {{#if episode.attributes.asset.url}}
      <heroImg src="{{ episode.attributes.asset.url }}" style="width: 700;"/>
      {{/if}}
    </banner>
    {{#if related}}
    <shelf style="padding: 10 0 -85 50">
      <header>
        <title>Další epizody pořadu</title>
      </header>
      <section>
        {{#each related }}
        <lockup data-href-page="episode" data-href-page-options="{{toJSON this }}">
          {{#if attributes.asset.url}}
          <img src="{{ attributes.asset.url }}" class="episode-small" />
          {{else}}
          <img src="" class="episode-small" />
          {{/if}}
          <title>{{ attributes.shortTitle }}{{#if attributes.part}} ({{ attributes.part }}){{/if}}</title>
        </lockup>
        {{/each}}
      </section>
    </shelf>
    {{/if}}
  </productTemplate>
</document>
