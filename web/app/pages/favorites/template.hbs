<document>
  {{#if favorites}}
  <stackTemplate>
    <banner>
      <title>Oblíbené</title>
    </banner>
    <collectionList>
      {{#if favorites.episodes}}
      <grid>
        <header>
          <title>Epizody</title>
        </header>
        <section>
          {{#each favorites.episodes}}
          <lockup data-href-page="{{ type }}" data-href-page-options="{{toJSON this }}">
            {{#if attributes.asset.url}}
            <img src="{{ attributes.asset.url }}" class="episode"/>
            {{else}}
            <img src="" class="episode"/>
            {{/if}}
            <title>{{ attributes.title }}</title>
          </lockup>
          {{/each}}
        </section>
      </grid>
      {{/if}}
      {{#if favorites.serials}}
      <grid>
        <header>
          <title>Seriály</title>
        </header>
        <section>
          {{#each favorites.serials}}
          <lockup data-href-page="{{ type }}" data-href-page-options="{{toJSON this }}">
            {{#if attributes.asset.url}}
            <img src="{{ attributes.asset.url }}" class="serial"/>
            {{else}}
            <img src="" class="serial"/>
            {{/if}}
            <title>{{ attributes.title }}</title>
          </lockup>
          {{/each}}
        </section>
      </grid>
      {{/if}}
      {{#if favorites.shows}}
      <grid>
        <header>
          <title>Pořady</title>
        </header>
        <section>
          {{#each favorites.shows}}
          <lockup data-href-page="{{ type }}" data-href-page-options="{{toJSON this }}">
            {{#if attributes.asset.url}}
            <img src="{{ attributes.asset.url }}" class="show"/>
            {{else}}
            <img src="" class="show"/>
            {{/if}}
            <title>{{ attributes.title }}</title>
          </lockup>
          {{/each}}
        </section>
      </grid>
      {{/if}}
      {{#if favorites.topics}}
      <grid>
        <header>
          <title>Témata</title>
        </header>
        <section>
          {{#each favorites.topics}}
          <lockup data-href-page="{{ type }}" data-href-page-options="{{toJSON this }}">
            {{#if attributes.asset.url}}
            <img src="{{ attributes.asset.url }}" class="topic-small"/>
            {{else}}
            <img src="" class="topic-small">
            {{/if}}
            <overlay>
              <title>{{ attributes.title }}</title>
            </overlay>
          </lockup>
          {{/each}}
        </section>
      </grid>
      {{/if}}
    </collectionList>
  </stackTemplate>
  {{else}}
  <alertTemplate>
    <description>Žádné oblíbené.</description>
  </alertTemplate>
  {{/if}}
</document>
