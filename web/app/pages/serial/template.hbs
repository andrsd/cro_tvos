<document>
  <compilationTemplate>
    <list>
      <relatedContent>
        <itemBanner>
          {{#if serial.attributes.asset.url}}
          <heroImg src="{{ serial.attributes.asset.url }}" />
          {{/if}}
          <description id="serial-description" style="tv-text-max-lines: 2">{{removeHTML serial.attributes.description }}</description>
          <row>
            <buttonLockup id="play-serial-btn"><badge src="resource://button-play" /><title>Přehrát</title></buttonLockup>
            <buttonLockup id="fav-btn">{{{ ratedButton }}}</buttonLockup>
          </row>
        </itemBanner>
      </relatedContent>
      <header>
        <title>{{ serial.attributes.title }}</title>
        <row>
          <text>{{ serial.attributes.totalParts }} epizod</text>
        </row>
      </header>
      <section>
        {{#each episodes}}
        <listItemLockup data-href-page="now-playing" data-href-page-options="{{toJSON this }}">
          <ordinal minLength="2">{{{watchedState watched }}}</ordinal>
          <title>{{ attributes.title }}</title>
          <subtitle>{{longDate attributes.since }}  {{timeLength attributes.since attributes.till }} {{#if attributes.part}}({{attributes.part}}. díl){{/if}}</subtitle>
        </listItemLockup>
        {{/each}}
        {{#if links.next}}
        <listItemLockup data-href-page="show" data-href-page-options="{{toJSON @root.links }}">
          <title>Další...</title>
        </listItemLockup>
        {{/if}}
      </section>
    </list>
  </compilationTemplate>
</document>
