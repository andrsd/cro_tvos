<document>
  <stackTemplate>
    <collectionList>
      {{#if carousel}}
      <carousel>
        <section>
          {{#each carousel.items }}
          <lockup data-href-page="{{ entity.type }}" data-href-page-options="{{toJSON entity }}">
            {{#if image}}
            <img src="{{ image }}" class="darkImage episode-big" />
            {{else}}
            <img src="" class="darkImage episode-big" />
            {{/if}}
            <title>{{ title }}</title>
            <description class="current-show" style="font-size:27%; margin-top:10; text-align: center">{{ description }}</description>
          </lockup>
          {{/each}}
        </section>
      </carousel>
      {{/if}}
      {{#each sections}}
      <grid>
          <header>
            <title>{{ title }}</title>
          </header>
          <section>
            {{#each items }}
            <lockup data-href-page="{{ type }}" data-href-page-options="{{toJSON this}}">
              {{#if attributes.asset.url}}
              <img src="{{ attributes.asset.url }}" class="{{ type }}"/>
              {{else}}
              <img class="{{ type }}" src=""/>
              {{/if}}
              <overlay>
                <title style="font-weight: bold; font-size: 30%; text-shadow: 0 0 5 #000">{{ attributes.title }}</title>
              </overlay>
            </lockup>
            {{/each}}
          </section>
      </grid>
      {{/each}}
      {{#if dashboard}}
      <grid>
        <header>
          <title>Témata</title>
        </header>
          <section>
            {{#each dashboard }}
            <lockup data-href-page="topic" data-href-page-options="{{toJSON this }}">
              {{#if attributes.asset.url}}
              <img src="{{ attributes.asset.url }}" class="topic-small"/>
              {{else}}
              <img src="" class="topic-small"/>
              {{/if}}
              <overlay>
                <title style="font-weight: bold; font-size: 30%; text-shadow: 0 0 5 #000">{{ attributes.title }}</title>
              </overlay>
            </lockup>
            {{/each}}
            <lockup data-href-page="topics">
              <img src="" class="topic-small"/>
              <overlay>
                <title style="font-weight: bold; font-size: 30%; text-shadow: 0 0 5 #000">Další...</title>
              </overlay>
            </lockup>
          </section>
      </grid>
      {{/if}}
    </collectionList>
  </stackTemplate>
</document>
