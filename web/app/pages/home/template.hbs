<document>
  <stackTemplate>
    <collectionList>
      {{#if carousel}}
      <carousel>
        <section>
          {{#each carousel.items }}
          <lockup data-href-page="{{ entity.type }}" data-href-page-options="{{toJSON entity }}">
            {{#if image}}
            <img src="{{ image }}" class="darkImage" style="width:570; height:320;" />
            {{else}}
            <img src="" class="darkImage" style="width:570; height:320;" />
            {{/if}}
            <title>{{ title }}</title>
            <description class="current-show" style="font-size:27%; margin-top:10; text-align: center">{{ description }}</description>
          </lockup>
          {{/each}}
        </section>
      </carousel>
      {{/if}}
      {{#if dashboard}}
      <separator>
        <button id="btn-topics">
          <text>Témata</text>
        </button>
      </separator>
      <grid>
          <section>
            {{#each dashboard }}
            <lockup data-href-page="topic" data-href-page-options="{{toJSON this }}">
              {{#if attributes.asset.url}}
              <img src="{{ attributes.asset.url }}" style="width: 370; height: 370"/>
              {{else}}
              <img src="" style="width: 370; height: 370"/>
              {{/if}}
              <overlay>
                <title>{{ attributes.title }}</title>
              </overlay>
            </lockup>
            {{/each}}
          </section>
      </grid>
      {{/if}}
      {{#if selected}}
      <shelf>
          <header>
            <title>Vybíráme hry, četby a povídky</title>
          </header>
          <section>
            {{#each selected }}
            <lockup data-href-page="{{ type }}" data-href-page-options="{{toJSON this }}">
              {{#if attributes.asset.url}}
              <img class="tile" src="{{ attributes.asset.url }}"/>
              {{else}}
              <img class="tile" src=""/>
              {{/if}}
              <title>{{ attributes.title }}</title>
            </lockup>
            {{/each}}
          </section>
      </shelf>
      {{/if}}
      {{#if recommended}}
      <shelf>
          <header>
            <title>Doporučené</title>
          </header>
          <section>
            {{#each recommended }}
            <lockup data-href-page="{{ type }}" data-href-page-options="{{toJSON this }}">
              {{#if attributes.asset.url}}
              <img class="square" src="{{ attributes.asset.url }}"/>
              {{else}}
              <img class="square" src=""/>
              {{/if}}
              <title>{{ attributes.title }}</title>
            </lockup>
            {{/each}}
          </section>
      </shelf>
      {{/if}}
    </collectionList>
  </stackTemplate>
</document>
