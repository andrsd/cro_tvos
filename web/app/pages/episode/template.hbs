<document>
  <productTemplate>
    <banner style="height:685">
      <stack>
        <title>{{ episode.attributes.title }}{{#if episode.attributes.part}} ({{ episode.attributes.part}}. díl){{/if}}</title>
        <row>
          <text>{{ episode.attributes.mirroredShow.title }}</text>
          <text>{{ episode.attributes.length }}</text>
        </row>
        <description allowsZooming="true" moreLabel="more">{{removeHTML episode.attributes.description }}</description>
        <row>
          <buttonLockup data-href-page="play-episode" data-href-page-options="{{toJSON episode }}">
            <badge src="resource://button-play"/>
            <title>Přehrát</title>
          </buttonLockup>
        </row>
      </stack>
      <heroImg src="{{ episode.attributes.asset.url }}" style="width: 700;"/>
    </banner>
    {{#if related}}
    <shelf style="padding: 10 0 -85 50">
      <header>
        <title>Další epizody pořadu</title>
      </header>
      <section>
        {{#each related }}
        <lockup data-href-page="episode" data-href-page-options="{{toJSON this }}">
          {{#if attributes.asset.url}}
          <img src="{{ attributes.asset.url }}" width="226" height="150" />
          {{else}}
          <img src="{{ asset_url img/episode.png }}" width="226" height="150" />
          {{/if}}
          <title>{{ attributes.shortTitle }}{{#if attributes.part}} ({{ attributes.part }}){{/if}}</title>
        </lockup>
        {{/each}}
      </section>
    </shelf>
    {{/if}}
  </productTemplate>
</document>
