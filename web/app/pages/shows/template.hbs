<document>
  <listTemplate>
    <banner>
      <title>Pořady</title>
    </banner>
    <list>
      <section>
        {{#each items}}
        <listItemLockup data-href-page="show" data-href-page-options="{{toJSON this }}">
          <title>{{ attributes.title }}</title>
          <relatedContent>
            <lockup>
              <img src="{{ attributes.asset.url }}" />
              <title>{{ attributes.title }}</title>
              <description>{{removeHTML attributes.description }}</description>
            </lockup>
          </relatedContent>
        </listItemLockup>
        {{/each}}
        {{#if links.next}}
        <listItemLockup data-href-page="shows" data-href-page-options="{{toJSON @root.links }}">
          <title>Další...</title>
        </listItemLockup>
        {{/if}}
      </section>
    </list>
  </listTemplate>
</document>
