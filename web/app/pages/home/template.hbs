<document>
  <stackTemplate>
    <collectionList>
      {{#if carousel}}
      <carousel>
        <section>
          {{#each carousel.items }}
          <lockup data-href-page="{{ entity.type }}" data-href-page-options="{{toJSON entity }}">
            {{#if image}}
            <img src="{{ image }}" class="darkImage episode-big" />
            {{else}}
            <img src="" class="darkImage episode-big" />
            {{/if}}
            <title>{{ title }}</title>
            <description class="current-show" style="font-size:27%; margin-top:10; text-align: center">{{ description }}</description>
          </lockup>
          {{/each}}
        </section>
      </carousel>
      {{/if}}
      {{#if selected}}
      <grid>
          <header>
            <title>Vybíráme hry, četby a povídky</title>
          </header>
          <section>
            {{#each selected }}
            <lockup data-href-page="{{ type }}" data-href-page-options="{{toJSON this }}">
              {{#if attributes.asset.url}}
              <img class="tile" src="{{ attributes.asset.url }}"/>
              {{else}}
              <img class="tile" src=""/>
              {{/if}}
              <title>{{ attributes.title }}</title>
            </lockup>
            {{/each}}
          </section>
      </grid>
      {{/if}}
      {{#if recommended}}
      <grid>
          <header>
            <title>Doporučené</title>
          </header>
          <section>
            {{#each recommended }}
            <lockup data-href-page="{{ type }}" data-href-page-options="{{toJSON this }}">
              {{#if attributes.asset.url}}
              <img class="show" src="{{ attributes.asset.url }}"/>
              {{else}}
              <img class="show" src=""/>
              {{/if}}
              <title>{{ attributes.title }}</title>
            </lockup>
            {{/each}}
          </section>
      </grid>
      {{/if}}
      {{#if dashboard}}
      <shelf style="margin-top: 30">
        <header>
          <title>Témata</title>
        </header>
          <section>
            {{#each dashboard }}
            <lockup data-href-page="topic" data-href-page-options="{{toJSON this }}">
              {{#if attributes.asset.url}}
              <img src="{{ attributes.asset.url }}" class="topic-small"/>
              {{else}}
              <img src="" class="topic-small"/>
              {{/if}}
              <overlay>
                <title>{{ attributes.title }}</title>
              </overlay>
            </lockup>
            {{/each}}
            <lockup data-href-page="topics">
              <img src="" class="topic-small"/>
              <overlay>
                <title>Další...</title>
              </overlay>
            </lockup>
          </section>
      </shelf>
      {{/if}}
    </collectionList>
  </stackTemplate>
</document>
